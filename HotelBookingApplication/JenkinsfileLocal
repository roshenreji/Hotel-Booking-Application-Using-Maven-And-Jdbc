pipeline {
     agent any
    tools{
        maven 'maven'
        jdk 'Jdk'
    }
    stages{
          stage('Fetch') {
            steps {
               sh 'echo $JOB_NAME'
                sh 'echo $BUILD_NUMBER'
                sh 'echo Fetch'
               git branch: 'master', url: 'https://github.com/roshenreji/Hotel-Booking-Application-Using-Maven-And-Jdbc.git'
            }
        }
        
        stage('Path'){
            steps{
                sh 'echo Path'
                sh 'pwd && ls'
            }
        }
        stage('Clean'){
            steps{
                dir("C:/Users/roshe/.jenkins/workspace/FirstArtifactory/HotelBookingApplication"){
                    sh 'echo Clean'
                    sh 'mvn  clean'
                }
            }
        }
        stage('Validate'){
                steps{
                     dir("C:/Users/roshe/.jenkins/workspace/FirstArtifactory/HotelBookingApplication"){
                
                        sh 'mvn  validate'
                     }
                }
            
         }
        stage('Compile'){
                steps{
                     dir("C:/Users/roshe/.jenkins/workspace/FirstArtifactory/HotelBookingApplication"){
                 
                        sh 'echo Compile'
                         sh 'mvn  compile'
                     }
                }
            
        }
        stage('Test'){
                 steps {
                      dir("C:/Users/roshe/.jenkins/workspace/FirstArtifactory/HotelBookingApplication"){
                         sh 'echo Test'
                         sh 'mvn test'
                      }
                 }
            }
            stage('Build'){
            steps {
                 dir("C:/Users/roshe/.jenkins/workspace/FirstArtifactory/HotelBookingApplication"){
                
                        sh 'echo Build'
                        sh 'mvn  package'
                 }
            }
            
            post {
                always {
                    //junit '**/target/surefire-reports/TEST-*.xml'
                    archiveArtifacts 'HotelBookingApplication/target/*.jar'
                     }
                }
             }
        stage('Sonar Analysis'){
            steps{
                 dir("C:/Users/roshe/.jenkins/workspace/FirstArtifactory/HotelBookingApplication"){
                    withSonarQubeEnv('Sonar'){
                        withMaven(maven:'maven'){
                            sh 'mvn sonar:sonar'
                        }
                        
                  }
                }
            }
            
        }
        stage("Quality gate") {
            steps {
                waitForQualityGate abortPipeline: true
            }
        }
        
             
            stage('collect artifact'){
                steps{
                    archiveArtifacts artifacts: 'HotelBookingApplication/target/*.jar', followSymlinks: false
                 }
            }      
         stage('deploy to artifactory')
         {
            steps{
     
                rtUpload (
                    serverId: 'JfrogId',
                    spec: '''{
                    "files": [
                         {
                             "pattern": "HotelBookingApplication/target/*.jar",
                             "target": "art-doc-dev-loc-new/sample/"
                        }
                     ]
                }''',
 
  
    buildName: 'Build1',
    buildNumber: '1'
)
     }}
     stage('download from artifactory')
         {
            steps{
     
                rtDownload (
                    serverId: 'JfrogId',
                    spec: '''{
                    "files": [
                         {
                             "pattern": "art-doc-dev-loc-new/sample/",
                             "target": "HotelBookingApplication/"
                        }
                     ]
                }''',
 
  
    buildName: 'Build2',
    buildNumber: '1'
)
     }}
        
    }
}